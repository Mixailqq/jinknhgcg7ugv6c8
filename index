  <script src="js/jquery.magnific-popup.min.js"></script>
  <script src="js/aos.js"></script>
  
  <!-- Chart.js для графиков -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script src="js/main.js"></script>

  <!-- Скрипт для админ-панели -->
  <script>
    // Конфигурация
    const ADMIN_CONFIG = {
      username: '1',
      password: '1'
    };

    // Хранилище данных
    let adminData = {
      visitors: [],
      products: [
        { id: 1, name: 'BR 2025 ЗИМА', price: 300, views: 42, image: 'images/br_ne.jpg', link: 'br_new.html', size: 'normal' },
        { id: 2, name: 'BR 2023 ЗИМА', price: 250, views: 28, image: 'images/br_old.jpg', link: 'br_old.html', size: 'normal' },
        { id: 3, name: 'BR 2024 ЗИМА', price: 275, views: 35, image: 'images/br_2.jpg', link: 'br_2024.html', size: 'normal' }
      ],
      snowEnabled: true,
      garlandEnabled: true,
      snowflakeCount: 30,
      theme: 'dark',
      textColor: 'white',
      mainPhoto: 'images/reklama.png'
    };

    // Глобальные переменные
    let chart = null;
    let visitStartTime = Date.now();

    // Инициализация
    document.addEventListener('DOMContentLoaded', function() {
      // Загрузка сохраненных данных
      loadAdminData();
      
      // Инициализация посещения
      trackVisit();
      
      // Обработчики админ-панели
      initAdminPanel();
      
      // Обработчики товаров
      initProductTracking();
      
      // Обновление статистики
      updateStats();
      
      // Инициализация чарта
      initChart();
      
      // Загрузка сохраненной темы
      loadTheme();
      
      // Обработчик для кнопки смены темы
      document.getElementById('themeToggle').addEventListener('click', toggleTheme);
      
      // Плавная прокрутка для всех внутренних ссылок
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // Плавное появление элементов при скролле
      window.addEventListener('scroll', function() {
        const elements = document.querySelectorAll('.site-section');
        elements.forEach(element => {
          const position = element.getBoundingClientRect();
          if (position.top < window.innerHeight * 0.8) {
            element.style.opacity = '1';
            element.style.transform = 'translateY(0)';
          }
        });
      });
      
      // Отслеживание ухода со страницы
      window.addEventListener('beforeunload', function() {
        const timeSpent = Math.floor((Date.now() - visitStartTime) / 1000);
        const currentVisit = adminData.visitors[adminData.visitors.length - 1];
        if (currentVisit) {
          currentVisit.timeSpent = timeSpent;
          saveAdminData();
        }
      });
      
      // Применяем сохраненные настройки товаров
      applyProductSizes();
    });

    // Функция смены темы
    function toggleTheme() {
      const body = document.body;
      const themeToggle = document.getElementById('themeToggle');
      
      if (body.classList.contains('light-theme')) {
        body.classList.remove('light-theme');
        themeToggle.innerHTML = '🌙';
        themeToggle.title = 'Включить светлую тему';
        localStorage.setItem('theme', 'dark');
      } else {
        body.classList.add('light-theme');
        themeToggle.innerHTML = '☀️';
        themeToggle.title = 'Включить темную тему';
        localStorage.setItem('theme', 'light');
      }
    }
    
    // Загрузка сохраненной темы
    function loadTheme() {
      const savedTheme = localStorage.getItem('theme');
      const themeToggle = document.getElementById('themeToggle');
      
      if (savedTheme === 'light') {
        document.body.classList.add('light-theme');
        themeToggle.innerHTML = '☀️';
        themeToggle.title = 'Включить темную тему';
      } else {
        themeToggle.innerHTML = '🌙';
        themeToggle.title = 'Включить светлую тему';
      }
    }

    // Инициализация админ-панели
    function initAdminPanel() {
      const adminBtn = document.getElementById('adminBtn');
      const adminModal = document.getElementById('adminModal');
      const loginForm = document.getElementById('loginForm');
      const adminPanel = document.getElementById('adminPanel');
      const adminPanelClose = document.getElementById('adminPanelClose');
      const loginError = document.getElementById('loginError');
      const tabs = document.querySelectorAll('.admin-tab');
      const sections = document.querySelectorAll('.admin-section');
      
      // Кнопка админ-панели
      adminBtn.addEventListener('click', () => {
        adminModal.classList.add('active');
      });
      
      // Закрытие модального окна
      adminModal.addEventListener('click', (e) => {
        if (e.target === adminModal) {
          adminModal.classList.remove('active');
          loginError.style.display = 'none';
        }
      });
      
      // Форма авторизации
      loginForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const username = document.getElementById('adminUsername').value;
        const password = document.getElementById('adminPassword').value;
        
        if (username === ADMIN_CONFIG.username && password === ADMIN_CONFIG.password) {
          adminModal.classList.remove('active');
          adminPanel.classList.add('active');
          loginError.style.display = 'none';
          loginForm.reset();
          showNotification('Успешный вход в админ-панель');
        } else {
          loginError.style.display = 'block';
        }
      });
      
      // Закрытие админ-панели
      adminPanelClose.addEventListener('click', () => {
        adminPanel.classList.remove('active');
      });
      
      // Переключение вкладок
      tabs.forEach(tab => {
        tab.addEventListener('click', () => {
          const tabId = tab.getAttribute('data-tab');
          
          tabs.forEach(t => t.classList.remove('active'));
          tab.classList.add('active');
          
          sections.forEach(section => {
            section.classList.remove('active');
            if (section.id === tabId + 'Section') {
              section.classList.add('active');
            }
          });
          
          if (tabId === 'stats') {
            updateStats();
            updateChart();
          } else if (tabId === 'visitors') {
            updateVisitorsTable();
          } else if (tabId === 'products') {
            updateProductsList();
          }
        });
      });
      
      // Управление снежинками
      const snowToggle = document.getElementById('snowToggle');
      snowToggle.checked = adminData.snowEnabled;
      updateSnowVisibility();
      
      snowToggle.addEventListener('change', () => {
        adminData.snowEnabled = snowToggle.checked;
        updateSnowVisibility();
        saveAdminData();
        showNotification(snowToggle.checked ? 'Снежинки включены' : 'Снежинки выключены');
      });
      
      // Управление количеством снежинок
      const snowCountSlider = document.getElementById('snowCount');
      const snowCountValue = document.getElementById('snowCountValue');
      
      snowCountSlider.value = adminData.snowflakeCount;
      snowCountValue.textContent = adminData.snowflakeCount;
      
      snowCountSlider.addEventListener('input', () => {
        adminData.snowflakeCount = parseInt(snowCountSlider.value);
        snowCountValue.textContent = adminData.snowflakeCount;
        updateSnowflakeCount();
        saveAdminData();
      });
      
      // Управление гирляндой
      const garlandToggle = document.getElementById('garlandToggle');
      garlandToggle.checked = adminData.garlandEnabled;
      updateGarlandVisibility();
      
      garlandToggle.addEventListener('change', () => {
        adminData.garlandEnabled = garlandToggle.checked;
        updateGarlandVisibility();
        saveAdminData();
        showNotification(garlandToggle.checked ? 'Гирлянда включена' : 'Гирлянда выключена');
      });
      
      // Управление фоном
      const colorOptions = document.querySelectorAll('.color-picker .color-option[data-theme]');
      colorOptions.forEach(option => {
        option.addEventListener('click', () => {
          const theme = option.getAttribute('data-theme');
          
          colorOptions.forEach(opt => opt.classList.remove('active'));
          option.classList.add('active');
          
          adminData.theme = theme;
          updateSiteTheme(theme);
          saveAdminData();
          showNotification(`Фон изменен на ${theme}`);
        });
      });
      
      // Управление цветом текста
      const textColorOptions = document.querySelectorAll('.color-picker .color-option[data-color]');
      textColorOptions.forEach(option => {
        option.addEventListener('click', () => {
          const color = option.getAttribute('data-color');
          
          textColorOptions.forEach(opt => opt.classList.remove('active'));
          option.classList.add('active');
          
          adminData.textColor = color;
          updateTextColor(color);
          saveAdminData();
          showNotification(`Цвет текста изменен`);
        });
      });
      
      // Форма добавления товара
      const addProductForm = document.getElementById('addProductForm');
      addProductForm.addEventListener('submit', (e) => {
        e.preventDefault();
        
        const newProduct = {
          id: Date.now(),
          name: document.getElementById('productName').value,
          price: parseInt(document.getElementById('productPrice').value),
          image: document.getElementById('productImage').value,
          link: document.getElementById('productLink').value,
          description: document.getElementById('productDescription').value,
          size: document.getElementById('productSize').value,
          views: 0
        };
        
        adminData.products.push(newProduct);
        saveAdminData();
        updateProductsList();
        updateStats();
        updateChart();
        
        addProductForm.reset();
        showNotification('Товар успешно добавлен!');
      });
      
      // Экспорт данных
      document.getElementById('exportData').addEventListener('click', exportToCSV);
      document.getElementById('exportJSON').addEventListener('click', exportToJSON);
      
      // Загрузка главного фото
      const mainPhotoUpload = document.getElementById('mainPhotoUpload');
      mainPhotoUpload.addEventListener('change', updateMainPhoto);
    }

    // Отслеживание посещений
    function trackVisit() {
      const visit = {
        timestamp: new Date().toISOString(),
        ip: 'Неизвестно',
        timeSpent: 0,
        viewedProducts: []
      };
      
      // Получение приблизительного IP через WebRTC
      getIPAddress().then(ip => {
        visit.ip = ip;
      }).catch(() => {
        visit.ip = 'Скрыто';
      });
      
      adminData.visitors.push(visit);
      saveAdminData();
    }

    // Получение IP адреса
    async function getIPAddress() {
      try {
        const response = await fetch('https://api.ipify.org?format=json');
        const data = await response.json();
        return data.ip;
      } catch (error) {
        return 'Ошибка получения IP';
      }
    }

    // Отслеживание просмотров товаров
    function initProductTracking() {
      document.querySelectorAll('.item[data-product]').forEach(item => {
        item.addEventListener('click', (e) => {
          if (!e.target.closest('.btn-primary')) return;
          
          const productName = item.getAttribute('data-product');
          const product = adminData.products.find(p => p.name === productName);
          
          if (product) {
            product.views = (product.views || 0) + 1;
            
            // Добавление в историю посещений
            const currentVisit = adminData.visitors[adminData.visitors.length - 1];
            if (currentVisit) {
              if (!currentVisit.viewedProducts) {
                currentVisit.viewedProducts = [];
              }
              if (!currentVisit.viewedProducts.includes(productName)) {
                currentVisit.viewedProducts.push(productName);
              }
            }
            
            saveAdminData();
            updateStats();
            updateChart();
          }
        });
      });
    }

    // Обновление статистики
    function updateStats() {
      // Всего посетителей
      document.getElementById('totalVisitors').textContent = adminData.visitors.length;
      
      // Среднее время
      const totalTime = adminData.visitors.reduce((sum, visit) => sum + (visit.timeSpent || 0), 0);
      const avgTime = adminData.visitors.length > 0 ? 
        Math.floor(totalTime / adminData.visitors.length) : 0;
      
      const minutes = Math.floor(avgTime / 60);
      const seconds = avgTime % 60;
      document.getElementById('avgTime').textContent = 
        `${minutes}:${seconds.toString().padStart(2, '0')}`;
      
      // Онлайн сейчас (симуляция)
      const onlineCount = Math.min(adminData.visitors.length, Math.floor(Math.random() * 10) + 1);
      document.getElementById('onlineNow').textContent = onlineCount;
      
      // Популярный товар
      const popularProduct = adminData.products.reduce((prev, current) => 
        (prev.views || 0) > (current.views || 0) ? prev : current
      );
      document.getElementById('popularProduct').textContent = popularProduct.name;
    }

    // Инициализация графика
    function initChart() {
      const ctx = document.getElementById('productChart').getContext('2d');
      
      chart = new Chart(ctx, {
        type: 'bar',
        data: {
          labels: adminData.products.map(p => p.name),
          datasets: [{
            label: 'Просмотры товаров',
            data: adminData.products.map(p => p.views || 0),
            backgroundColor: 'rgba(139, 92, 246, 0.7)',
            borderColor: 'rgba(139, 92, 246, 1)',
            borderWidth: 2,
            borderRadius: 10
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              labels: {
                color: 'var(--text-primary)',
                font: {
                  size: 14
                }
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                color: 'var(--text-primary)',
                font: {
                  size: 12
                }
              },
              grid: {
                color: 'var(--border-soft)'
              }
            },
            x: {
              ticks: {
                color: 'var(--text-primary)',
                font: {
                  size: 12
                }
              },
              grid: {
                color: 'var(--border-soft)'
              }
            }
          }
        }
      });
    }

    // Обновление графика
    function updateChart() {
      if (chart) {
        chart.data.labels = adminData.products.map(p => p.name);
        chart.data.datasets[0].data = adminData.products.map(p => p.views || 0);
        chart.update();
      }
    }

    // Обновление таблицы посетителей
    function updateVisitorsTable() {
      const filter = document.getElementById('dateFilter').value;
      const now = new Date();
      let filteredVisitors = [...adminData.visitors].reverse();
      
      if (filter !== 'all') {
        filteredVisitors = filteredVisitors.filter(visit => {
          const visitDate = new Date(visit.timestamp);
          
          switch (filter) {
            case 'today':
              return visitDate.toDateString() === now.toDateString();
            case 'week':
              const weekAgo = new Date(now - 7 * 24 * 60 * 60 * 1000);
              return visitDate >= weekAgo;
            case 'month':
              const monthAgo = new Date(now);
              monthAgo.setMonth(monthAgo.getMonth() - 1);
              return visitDate >= monthAgo;
            default:
              return true;
          }
        });
      }
      
      const tableBody = document.getElementById('visitorsTable');
      tableBody.innerHTML = '';
      
      filteredVisitors.slice(0, 50).forEach(visit => {
        const time = new Date(visit.timestamp).toLocaleString();
        const timeSpent = formatTime(visit.timeSpent || 0);
        const viewedProducts = visit.viewedProducts ? 
          visit.viewedProducts.join(', ') : 'Нет';
        
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${time}</td>
          <td>${visit.ip}</td>
          <td>${timeSpent}</td>
          <td>${viewedProducts}</td>
        `;
        tableBody.appendChild(row);
      });
    }

    // Обновление списка товаров
    function updateProductsList() {
      const container = document.getElementById('productsList');
      container.innerHTML = '';
      
      adminData.products.forEach(product => {
        const card = document.createElement('div');
        card.className = 'product-form';
        card.innerHTML = `
          <div style="display:flex; align-items:flex-start; gap:20px;">
            <img src="${product.image}" alt="${product.name}" style="width:100px; height:100px; object-fit:cover; border-radius:10px;">
            <div style="flex:1;">
              <h4 style="margin:0 0 10px 0;">${product.name}</h4>
              <p style="margin:0 0 5px 0; color:var(--text-secondary);">Цена: ${product.price}₽</p>
              <p style="margin:0 0 5px 0; color:var(--text-secondary);">Просмотры: ${product.views || 0}</p>
              <p style="margin:0 0 5px 0; color:var(--text-secondary);">Размер: ${product.size || 'normal'}</p>
              <div class="edit-controls">
                <button class="edit-btn save" onclick="editProduct(${product.id})">Редактировать</button>
                <button class="edit-btn delete" onclick="deleteProduct(${product.id})">Удалить</button>
              </div>
            </div>
          </div>
        `;
        container.appendChild(card);
      });
    }

    // Редактирование товара
    function editProduct(productId) {
      const product = adminData.products.find(p => p.id === productId);
      if (!product) return;
      
      const newName = prompt('Новое название товара:', product.name);
      if (newName) product.name = newName;
      
      const newPrice = prompt('Новая цена:', product.price);
      if (newPrice) product.price = parseInt(newPrice);
      
      const newImage = prompt('Новая ссылка на изображение:', product.image);
      if (newImage) product.image = newImage;
      
      const newLink = prompt('Новая ссылка на страницу товара:', product.link);
      if (newLink) product.link = newLink;
      
      const newSize = prompt('Размер товара (normal/large/small):', product.size || 'normal');
      if (newSize && ['normal', 'large', 'small'].includes(newSize)) {
        product.size = newSize;
        updateProductSize(productId, newSize);
      }
      
      saveAdminData();
      updateProductsList();
      updateChart();
      showNotification('Товар обновлен');
    }

    // Удаление товара
    function deleteProduct(productId) {
      if (confirm('Вы уверены, что хотите удалить этот товар?')) {
        adminData.products = adminData.products.filter(p => p.id !== productId);
        saveAdminData();
        updateProductsList();
        updateStats();
        updateChart();
        showNotification('Товар удален');
      }
    }

    // Обновление размера товара на сайте
    function updateProductSize(productId, size) {
      const product = adminData.products.find(p => p.id === productId);
      if (!product) return;
      
      const productItem = document.querySelector(`.item[data-product="${product.name}"]`);
      if (productItem) {
        // Удаляем старые классы размера
        productItem.classList.remove('product-large', 'product-small');
        
        // Добавляем новый класс
        if (size === 'large') {
          productItem.classList.add('product-large');
        } else if (size === 'small') {
          productItem.classList.add('product-small');
        }
      }
    }

    // Применение размеров товаров при загрузке
    function applyProductSizes() {
      adminData.products.forEach(product => {
        if (product.size && product.size !== 'normal') {
          updateProductSize(product.id, product.size);
        }
      });
    }

    // Форматирование времени
    function formatTime(seconds) {
      if (seconds < 60) return `${seconds} сек`;
      const minutes = Math.floor(seconds / 60);
      const remainingSeconds = seconds % 60;
      return `${minutes} мин ${remainingSeconds} сек`;
    }

    // Управление гирляндой
    function updateGarlandVisibility() {
      const garland = document.querySelector('.garland-container');
      if (garland) {
        if (adminData.garlandEnabled) {
          garland.style.display = 'block';
        } else {
          garland.style.display = 'none';
        }
      }
    }

    // Управление количеством снежинок
    function updateSnowflakeCount() {
      const container = document.getElementById('snowflakesContainer');
      const currentCount = container.children.length;
      const targetCount = adminData.snowflakeCount;
      
      if (targetCount > currentCount) {
        // Добавляем снежинки
        for (let i = currentCount; i < targetCount; i++) {
          const snowflake = document.createElement('div');
          snowflake.className = 'snowflake';
          snowflake.innerHTML = '❄';
          
          // Случайная позиция и анимация
          const left = Math.random() * 100;
          const duration = 10 + Math.random() * 10;
          const delay = Math.random() * 30;
          const size = 0.8 + Math.random() * 0.6;
          
          snowflake.style.left = `${left}%`;
          snowflake.style.animationDuration = `${duration}s`;
          snowflake.style.animationDelay = `${delay}s`;
          snowflake.style.fontSize = `${size}em`;
          
          container.appendChild(snowflake);
        }
      } else if (targetCount < currentCount) {
        // Удаляем снежинки
        const snowflakes = Array.from(container.children);
        for (let i = currentCount - 1; i >= targetCount; i--) {
          container.removeChild(snowflakes[i]);
        }
      }
    }

    // Управление темой фона
    function updateSiteTheme(theme) {
      const body = document.body;
      
      // Удаляем старые классы темы
      body.classList.remove('theme-blue', 'theme-red', 'theme-green', 'theme-brown');
      
      // Устанавливаем новый градиент
      const root = document.documentElement;
      
      switch (theme) {
        case 'blue':
          root.style.setProperty('--bg-primary', 'linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%)');
          body.classList.add('theme-blue');
          break;
        case 'red':
          root.style.setProperty('--bg-primary', 'linear-gradient(135deg, #2d0a0a 0%, #4a1414 50%, #611a1a 100%)');
          body.classList.add('theme-red');
          break;
        case 'green':
          root.style.setProperty('--bg-primary', 'linear-gradient(135deg, #0a2d1a 0%, #144a28 50%, #1a6132 100%)');
          body.classList.add('theme-green');
          break;
        case 'brown':
          root.style.setProperty('--bg-primary', 'linear-gradient(135deg, #2d1a0a 0%, #4a2814 50%, #61321a 100%)');
          body.classList.add('theme-brown');
          break;
        default:
          root.style.setProperty('--bg-primary', 'linear-gradient(135deg, #0a0a0a 0%, #141414 50%, #1a1a1a 100%)');
      }
    }

    // Управление цветом текста
    function updateTextColor(color) {
      const root = document.documentElement;
      
      switch (color) {
        case 'light-gray':
          root.style.setProperty('--text-primary', '#e0e0e0');
          root.style.setProperty('--text-secondary', '#b0b0b0');
          break;
        case 'yellow':
          root.style.setProperty('--text-primary', '#ffeb3b');
          root.style.setProperty('--text-secondary', '#ffd54f');
          break;
        case 'blue-light':
          root.style.setProperty('--text-primary', '#4fc3f7');
          root.style.setProperty('--text-secondary', '#29b6f6');
          break;
        case 'green-light':
          root.style.setProperty('--text-primary', '#c8e6c9');
          root.style.setProperty('--text-secondary', '#a5d6a7');
          break;
        default:
          root.style.setProperty('--text-primary', '#ffffff');
          root.style.setProperty('--text-secondary', '#e0e0e0');
      }
    }

    // Обновить главное фото
    function updateMainPhoto() {
      const urlInput = document.getElementById('mainPhotoUrl');
      const fileInput = document.getElementById('mainPhotoUpload');
      const currentPhoto = document.getElementById('currentMainPhoto');
      const sitePhoto = document.getElementById('mainSitePhoto');
      
      if (urlInput.value) {
        // Используем URL
        adminData.mainPhoto = urlInput.value;
        currentPhoto.src = urlInput.value;
        
        // Обновляем фото на сайте
        if (sitePhoto) {
          sitePhoto.src = urlInput.value;
        }
        
        urlInput.value = '';
        showNotification('Фото обновлено по URL');
      } else if (fileInput.files[0]) {
        // Загружаем файл
        const file = fileInput.files[0];
        const reader = new FileReader();
        
        reader.onload = function(e) {
          adminData.mainPhoto = e.target.result;
          currentPhoto.src = e.target.result;
          
          // Обновляем фото на сайте
          if (sitePhoto) {
            sitePhoto.src = e.target.result;
          }
          
          showNotification('Фото загружено');
        };
        
        reader.readAsDataURL(file);
        fileInput.value = '';
      }
      
      saveAdminData();
    }

    // Управление снежинками
    function updateSnowVisibility() {
      const container = document.getElementById('snowflakesContainer');
      if (adminData.snowEnabled) {
        container.style.display = 'block';
      } else {
        container.style.display = 'none';
      }
    }

    // Показать уведомление
    function showNotification(message) {
      const notification = document.getElementById('adminNotification');
      const messageElement = document.getElementById('notificationMessage');
      
      messageElement.textContent = message;
      notification.classList.add('show');
      
      setTimeout(() => {
        notification.classList.remove('show');
      }, 3000);
    }

    // Экспорт в CSV
    function exportToCSV() {
      let csv = 'Дата,IP,Время на сайте,Просмотренные товары\n';
      
      adminData.visitors.forEach(visit => {
        const time = new Date(visit.timestamp).toLocaleString();
        const timeSpent = formatTime(visit.timeSpent || 0);
        const viewedProducts = visit.viewedProducts ? 
          visit.viewedProducts.join('; ') : '';
        
        csv += `"${time}","${visit.ip}","${timeSpent}","${viewedProducts}"\n`;
      });
      
      downloadFile(csv, 'visitors.csv', 'text/csv');
      showNotification('Данные экспортированы в CSV');
    }

    // Экспорт в JSON
    function exportToJSON() {
      const data = {
        visitors: adminData.visitors,
        products: adminData.products,
        stats: {
          totalVisitors: adminData.visitors.length,
          popularProduct: adminData.products.reduce((prev, current) => 
            (prev.views || 0) > (current.views || 0) ? prev : current
          )
        }
      };
      
      const json = JSON.stringify(data, null, 2);
      downloadFile(json, 'data.json', 'application/json');
      showNotification('Данные экспортированы в JSON');
    }

    // Скачивание файла
    function downloadFile(content, fileName, contentType) {
      const blob = new Blob([content], { type: contentType });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = fileName;
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      URL.revokeObjectURL(url);
    }

    // Сохранение данных
    function saveAdminData() {
      try {
        localStorage.setItem('lildrug_admin_data', JSON.stringify(adminData));
      } catch (e) {
        console.error('Ошибка сохранения данных:', e);
      }
    }

    // Загрузка данных
    function loadAdminData() {
      try {
        const saved = localStorage.getItem('lildrug_admin_data');
        if (saved) {
          const parsed = JSON.parse(saved);
          adminData = {
            ...adminData,
            ...parsed,
            visitors: parsed.visitors || [],
            products: parsed.products || adminData.products,
            snowEnabled: parsed.snowEnabled !== undefined ? parsed.snowEnabled : true,
            garlandEnabled: parsed.garlandEnabled !== undefined ? parsed.garlandEnabled : true,
            snowflakeCount: parsed.snowflakeCount || 30,
            theme: parsed.theme || 'dark',
            textColor: parsed.textColor || 'white',
            mainPhoto: parsed.mainPhoto || 'images/reklama.png'
          };
          
          // Применяем сохраненные настройки
          updateSiteTheme(adminData.theme);
          updateTextColor(adminData.textColor);
          updateGarlandVisibility();
          updateSnowflakeCount();
          
          // Активируем правильные кнопки в цветовом пикере
          document.querySelectorAll(`.color-option[data-theme="${adminData.theme}"]`).forEach(el => {
            el.classList.add('active');
          });
          
          document.querySelectorAll(`.color-option[data-color="${adminData.textColor}"]`).forEach(el => {
            el.classList.add('active');
          });
          
          // Обновляем главное фото
          const currentPhoto = document.getElementById('currentMainPhoto');
          const sitePhoto = document.getElementById('mainSitePhoto');
          if (currentPhoto && adminData.mainPhoto) {
            currentPhoto.src = adminData.mainPhoto;
          }
          if (sitePhoto && adminData.mainPhoto) {
            sitePhoto.src = adminData.mainPhoto;
          }
        }
      } catch (e) {
        console.error('Ошибка загрузки данных:', e);
      }
    }

    // Обновление фильтра посетителей
    document.getElementById('dateFilter')?.addEventListener('change', updateVisitorsTable);
  </script>
    
  </body>
</html>
